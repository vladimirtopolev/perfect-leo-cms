{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "../../../build"
  },
  "include": [
    "config/**/*",
    "config/**/*.json",
    "src/**/*"
  ]
}
